
@{
    ViewData["Title"] = "Calculator";
}

<link rel="stylesheet" href="~/css/CalculatorCSS.css"/>

<h2>Calculator</h2>

<div class="box">
    <div class="display"><input type="text" readonly size="18" id="d"></div>
    <div class="keys">
        <p>
            <input type="button" class="button gray"
                   value="mrc" id="btnmrc" onclick='c("Created....................")'>
            <input type="button" class="button gray"
                   value="m-" id="btnm-" onclick='c("...............by............")'>
            <input type="button" class="button gray" 
                   value="m+" id="btnm+" onclick='c(".....................Matt")'>
            <input type="button" class="button pink"
                   value="/" id="btn/" onclick='v("/")'>
        </p>
        <p>
            <input type="button" class="button black"
                   value="7" id="btn7" onclick='v("7")'>
            <input type="button" class="button black" 
                   value="8" id="btn8" onclick='v("8")'>
            <input type="button" class="button black" 
                   value="9" id="btn9" onclick='v("9")'>
            <input type="button" class="button pink" 
                   value="*" id="btn*" onclick='v("*")'>
        </p>
        <p>
            <input type="button" class="button black"
                   value="4" id="btn4" onclick='v("4")'>
            <input type="button" class="button black" 
                   value="5" id="btn5" onclick='v("5")'>
            <input type="button" class="button black" 
                   value="6" id="btn6" onclick='v("6")'>
            <input type="button" class="button pink" 
                   value="-" id="btn-" onclick='v("-")'>
        </p>
        <p>
            <input type="button" class="button black"
                   value="1" id="btn1" onclick='v("1")'>
            <input type="button" class="button black" 
                   value="2" id="btn2" onclick='v("2")'>
            <input type="button" class="button black" 
                   value="3" id="btn3" onclick='v("3")'>
            <input type="button"class="button pink" 
                   value="+" id="btn+" onclick='v("+")'>
        </p>
        <p>
            <input type="button" class="button black"
                   value="0" id="btn0" onclick='v("0")'>
            <input type="button"class="button black" 
                   value="." id="btn." onclick='v(".")'>
            <input type="button" class="button black" 
                   value="C" id="btnC" onclick='c("")'>
            <input type="button"class="button orange" 
                   value="=" id="btn=" onclick='e()'>
        </p>
    </div>
</div>

<script src="~/js/CalculatorJS.js"></script>